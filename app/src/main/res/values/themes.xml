<resources>
    <!-- Base application theme. -->

    <!--<style name="Theme.AdhiPradanaTest" parent="Theme.AppCompat.Light">-->
    <style name="Theme.AdhiPradanaTest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyBigButton" parent="">
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/big_button_height</item>
    </style>

    <style name="MyBigButton.Margin" parent="MyBigButton">
        <item name="android:layout_marginLeft">@dimen/layout_horizontal_padding</item>
        <item name="android:layout_marginRight">@dimen/layout_horizontal_padding</item>
        <item name="android:layout_marginBottom">14dp</item>
    </style>

    <style name="MyCorner.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/my_corner_cut</item>
    </style>

    <style name="MyCorner.Image.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="MyCorner.ItemSmall.Cut" parent="MyCorner.Cut">
        <item name="cornerSize">9dp</item>
    </style>

    <style name="MyCorner.ItemBig.Cut" parent="MyCorner.Cut">
        <item name="cornerSize">11dp</item>
    </style>

    <style name="MyCorner.ItemBigCategoryBtn.Cut" parent="MyCorner.Cut">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="MyCorner.ImageCorner50percent.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MyCorner.BottomNavigation.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">28dp</item>
        <item name="cornerSizeTopLeft">28dp</item>
        <item name="cornerSizeBottomLeft">@dimen/null_dp</item>
        <item name="cornerSizeBottomRight">@dimen/null_dp</item>
    </style>

    <style name="MyInputTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/log_in_edit_text_size</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/mtrl_filled_background_color</item>
        <item name="boxStrokeWidth">@dimen/null_dp</item>
        <item name="boxStrokeWidthFocused">@dimen/null_dp</item>
        <item name="hintEnabled">false</item>
        <item name="shapeAppearanceOverlay">@style/MyCorner.Cut</item>
        <item name="android:layout_marginBottom">@dimen/log_in_margin_size</item>
    </style>

    <style name="MyEditText" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/log_in_edit_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">11sp</item>
        <item name="android:minHeight">@dimen/null_dp</item>
        <item name="android:minWidth">@dimen/null_dp</item>
        <item name="android:insetTop">@dimen/null_dp</item>
        <item name="android:insetBottom">@dimen/null_dp</item>
        <item name="android:paddingTop">@dimen/null_dp</item>
        <item name="android:paddingBottom">@dimen/null_dp</item>
    </style>

    <style name="MyTextButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/null_dp</item>
        <item name="android:minWidth">@dimen/null_dp</item>
        <item name="android:insetTop">@dimen/null_dp</item>
        <item name="android:insetBottom">@dimen/null_dp</item>
    </style>

    <style name="MyTextButton.BigCard.Discount" parent="MyTextButton">
        <item name="android:textSize">10sp</item>
        <item name="backgroundTint">#F93A3A</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:letterSpacing">-0.06</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingStart">@dimen/null_dp</item>
        <item name="android:paddingEnd">@dimen/null_dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="shapeAppearanceOverlay">@style/MyCorner.ItemBigCategoryBtn.Cut</item>
    </style>

    <style name="MyTextButton.BigCard.Category" parent="MyTextButton.BigCard.Discount">
        <item name="android:textSize">9sp</item>
        <item name="backgroundTint">#C4C4C4D9</item>
        <item name="android:textColor">@color/black</item>
        <item name="shapeAppearanceOverlay">@style/MyCorner.ItemBigCategoryBtn.Cut</item>
    </style>

    <style name="MyLoginWithButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textSize">@dimen/log_in_with_button_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">@null</item>
        <item name="iconPadding">@dimen/log_in_custom_icon_pudding_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyCard.BigMargin" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">@dimen/null_dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="cardBackgroundColor">#00ffffff</item>
        <item name="android:layout_marginLeft">@dimen/layout_horizontal_padding</item>
        <item name="android:layout_marginRight">@dimen/layout_horizontal_padding</item>
    </style>

    <style name="MyCard.SmallMargin" parent="MyCard.BigMargin">
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="MyBottomMenu" parent="">
        <item name="itemIconSize">40dp</item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>

    <style name="MyExtraSmallFAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="ensureMinTouchTargetSize">false</item>
        <item name="elevation">@dimen/null_dp</item>
        <item name="backgroundTint">#e5e9df</item>
        <item name="tint">#545589</item>
        <item name="rippleColor">@null</item>
        <item name="strokeWidth">@dimen/null_dp</item>
        <item name="fabCustomSize">20dp</item>
        <item name="maxImageSize">14dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="MyMiddleFAB" parent="MyExtraSmallFAB">
        <item name="fabCustomSize">28dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="MyBigFAB" parent="MyExtraSmallFAB">
        <item name="fabCustomSize">35dp</item>
        <item name="maxImageSize">24dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Image.SellerAvatar" parent="">
        <item name="android:layout_width">@dimen/seller_avatar_size</item>
        <item name="android:layout_height">@dimen/seller_avatar_size</item>
        <item name="android:layout_margin">@dimen/margin_8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="elevation">@dimen/null_dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearanceOverlay">@style/MyCorner.ImageCorner50percent.Cut</item>
        <item name="strokeColor">@color/seller_avatar_stroke_color</item>
        <item name="strokeWidth">@dimen/seller_avatar_stroke_size</item>
    </style>

    <style name="MyTypo.Text.600" parent="">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:letterSpacing">-0.06</item>
    </style>

    <style name="MyTypo.Text.400" parent="">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="MyTypo.Text.400.CategoryItem" parent="MyTypo.Text.400">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">11dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/item_category_text</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="BigCard.Text.Head" parent="MyTypo.Text.600">
        <item name="android:layout_width">@dimen/item_big_description_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_8dp</item>
        <item name="android:layout_marginTop">@dimen/margin_6dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">2</item>
        <item name="android:textSize">@dimen/item_big_description_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BigCard.Text.Cost" parent="BigCard.Text.Head">
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>