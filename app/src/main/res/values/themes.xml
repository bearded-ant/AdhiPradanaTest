<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <!--<style name="Theme.AdhiPradanaTest" parent="Theme.AppCompat.Light">-->
    <style name="Theme.AdhiPradanaTest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SmallButton" parent="">
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>

    </style>

    <style name="SmallButton.Cut" parent="SmallButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="MyInputTextLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/log_in_edit_text_size</item>
        <item name="boxStrokeWidth">@dimen/null_dp</item>
        <item name="shapeAppearanceOverlay">@style/SmallButton.Cut</item>
        <item name="android:layout_marginBottom">@dimen/log_in_margin_size</item>
    </style>

    <style name="MyEditText" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="MyTextButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/null_dp</item>
        <item name="android:minWidth">@dimen/null_dp</item>
        <item name="android:insetTop">@dimen/null_dp</item>
        <item name="android:insetBottom">@dimen/null_dp</item>
    </style>

    <style name="MyLoginWithButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textSize">@dimen/log_in_with_button_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">@null</item>
        <item name="iconPadding">@dimen/log_in_custom_icon_pudding_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>